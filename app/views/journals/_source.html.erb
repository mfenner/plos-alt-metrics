<% active_categories.each do |category| %>
  <h3><%= h(category.name) %> <small><%= h(category.group_description) %></small></h3>

  <div class="row">
    <% category.sources.reusable.each do |source| %>
      <% if source.prefix.blank? or (@journal.title and @journal.title.match(/^PLoS/)) %>
      <div class="span4 source">
			  <%= image_tag source.class.to_s.downcase + ".gif", :class => "source" %>
			</div>
	    <% end %>
	  <% end %>
	</div>
	
	<div class="row">
    <% category.sources.reusable.each do |source| %>
      <% if source.prefix.blank? or (@journal.title and @journal.title.match(/^PLoS/)) %>
      <div class="span4">
        <legend><%= @journal.citations_count(source) %></legend>
      </div>
    <% end %>
   <% end %>
	</div>		
<% end %>