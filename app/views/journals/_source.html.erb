<% if @journal.citations_count > 0 %>
	<% active_categories.each do |category| %>
	  <% unless @journal.get_cites_by_category(category.name).empty? %>
	  	<h3><%= h(category.name) %> <small><%= h(category.group_description) %></small></h3>
	
			<ul class="thumbnails">    
				<% category.sources.reusable.each do |source| %>
		      <% if @journal.citations_count(source) > 0 %>
				    <li class="span3">
					    <div class="thumbnail">
						    <%= image_tag source.class.to_s.downcase + ".gif" %>
						    <% if @journal.citations_count(source) > 0 %>
						      <div class="count">
						        <%= @journal.citations_count(source) %>
						      </div>
						    <% end %>
						  </div>
						</li>
				  <% end %>
				<% end %>
			</ul>

		<% end %>	
	<% end %>
<% else %>
  <div class="alert alert-info">
    No metrics found.
  </div>
<% end %>