<% unless @journal.journal_articles.empty? %>
	<div class="journal_article">
		<table class="table">
			<thead>
			<th>
				<h2><%= pluralize(@journal.journal_articles.count, 'Journal Article') %></h2>
			</th>
			<% active_categories.each do |category| %>
		    <% category.sources.active.each do |source| %>
		      <% if source.prefix.blank? or @journal.title.match(/^PLoS/) %>
		      <th class="source">
				    <%= image_tag source.class.to_s.downcase + "_sm.gif", :title => source.category.work_description + ": " + source.name %>
			    </th>
			    <% end %>
			  <% end %>
	    <% end %>
	    </thead>
	    <tbody>
	    <% @journal_articles.each do |@work| %>
	      <tr>
					<td>	
	      	  <h4 itemprop="name"><%= link_to @work.title, work_path(@work.id) %></h4>
	          <p class="citation"><%= formatted_citation(@work).html_safe %>
	          <% unless @work.short_doi.blank? %>
	            <br/><%= link_to "http://doi.org/" + @work.short_doi, "http://doi.org/" + @work.short_doi, :itemprop => "url" %>
	          <% end %>
						<div id="comment_<%= @work.id %>">
							<%= render :partial => "works/comment" %>
					  </div>
					  </p>
	      	</td>
	          <% active_categories.each do |category| %>
					    <% category.sources.active.each do |source| %>
					      <% if source.prefix.blank? or @work.doi.match(/^#{source.prefix}/) %>
				        <td class="source">
					        <% citation = @work.citations_by_source(source) %>
								  <% if citation and citation[:total] > 0 %>
	                 <% if citation[:public_url] %>
	                   <%= link_to h(citation[:total]), citation[:public_url]  %>
	                 <% else %>
	                   <%= h(citation[:total]) %>
	                 <% end %>
	               <% end %>
					    </td>
					    <% end %>
				    <% end %>
	   	  <% end %>
		  </tr>
	    <% end %>
		</tbody>
		</table>
		<%= will_paginate @journal_articles %>
	</div>
<% else %>
  <div class="alert alert-info">
    No journal articles found.
  </div>
<% end %>