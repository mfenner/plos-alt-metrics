<div class="layout">  
  <% unless @journals.empty? %>
	<table class="index">
		<th class="name"><%= pluralize(@journals.total_entries, 'Journal') %></th>
		<% @journals.in_groups_of(2, false) do |journals| %> 
		  <tr>  
		    <% journals.each do |journal| %>  
		    	<td class="index">
			      <% unless journal.nil? %>
							<span class="name"><%= link_to journal.title, journal_path(journal) %></span><br/>
							<%= journal.issn_electronic %>
		        <% end %>
	      	</td>
		    <% end %>  
		  </tr>  
	<% end %>
	<tr>
    <td class="pagination" colspan=2>
	    <div class="pagination">
		    <%= will_paginate @journals %>
		  </div>
	  </td>
	</tr>
	</table>
    </div>
  <% else %>
    <h2>No journals found</h2>
  <% end %>