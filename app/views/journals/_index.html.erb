<div class="content">
  <% unless @journals.empty? %>
	<table class="table">
		<thead>
		<th colspan="2"><h2><%= pluralize(@journals.total_entries, 'Journal') %> </h2></th>
		</thead>
		<tbody>
		<% @journals.in_groups_of(2, false) do |journals| %> 
		  <tr>  
		    <% journals.each do |journal| %>  
		    	<td>
			      <% unless journal.nil? %>
							<h4><%= link_to journal.title, journal_path(journal.issn_print) %></h4>
							<p><%= journal.issn_print %></p>
		        <% end %>
	      	</td>
		    <% end %>  
		  </tr>  
	<% end %>
	</tbody>
	</table>
	
	<%= will_paginate @journals %>
  <% else %>
    <h2>No journals found</h2>
  <% end %>
</div>