<% unless @book.book_contents.empty? %>
	<div class="book_content">
		<table class="zebra-striped">
			<thead>
			<th>
				<h2><%= pluralize(@book.book_contents.count, 'Book Chapter') %></h2>
			</th>
			<% active_categories.each do |category| %>
		    <% category.sources.active.each do |source| %>
		      <% if source.prefix.blank? or @book.title.match(/^PLoS/) %>
		      <th>
				    <%= image_tag source.class.to_s.downcase + "_sm.gif", :title => source.category.work_description + ": " + source.name %>
			    </th>
			  <% end %>	
			  <% end %>
	    <% end %>
	    </thead>
	    <tbody>
	    <% @book.book_contents.each do |book_content| %>
	      <tr>
					<td>	
	      	  <span itemprop="name" class="name"><%= link_to book_content.title, work_path(book_content.id) %></span><br/>
	          <%= formatted_citation(book_content).html_safe %>
	          <br/><%= link_to "http://doi.org/" + book_content.short_doi, "http://doi.org/" + book_content.short_doi, :itemprop => "url" %>
	      	</td>
	          <% active_categories.each do |category| %>
					    <% category.sources.active.each do |source| %>
					      <% if source.prefix.blank? or book_content.doi.match(/^#{source.prefix}/) %>
				        <td>
					        <% citation = book_content.citations_by_source(source) %>
								  <% if citation and citation[:total] > 0 %>
	                 <% if citation[:public_url] %>
	                   <%= link_to h(citation[:total]), citation[:public_url]  %>
	                 <% else %>
	                   <%= h(citation[:total]) %>
	                 <% end %>
	               <% end %>
					    </td>
					    <% end %>
				    <% end %>
	   	  <% end %>
		  </tr>
	    <% end %>
		</tbody>
		</table>
	</div>
<% else %>
  <div class="alert-message warning fade in" data-alert="alert" >
    <a class="close" href="#">&times;</a>
    <p>No book content found.</p>
  </div>
<% end %>