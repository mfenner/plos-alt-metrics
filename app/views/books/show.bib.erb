<% bibliography = BibTeX::Bibliography.new %>

<% unless @book.book_contents.empty? %>
  <% @book.book_contents.each do |book_content| %>
    <% unless book_content.to_bib.nil? %>
      <% bibliography << book_content.to_bib %>
    <% end %>
  <% end %>
<% end %>
<% unless @book.conference_papers.empty? %>
	<% @book.conference_papers.each do |conference_paper| %>
    <% unless conference_paper.to_bib.nil? %>
      <% bibliography << conference_paper.to_bib %>
    <% end %>
  <% end %>
<% end %>
<%= bibliography %>