<div class="content">
  <% unless @books.empty? %>
	<table class="table">
		<thead>
		<th colspan="2"><h2><%= pluralize(@books.total_entries, 'Books and Proceedings') %> </h2></th>
		</thead>
		<tbody>
		<% @books.in_groups_of(2, false) do |books| %> 
		  <tr>  
		    <% books.each do |book| %>  
		    	<td>
			      <% unless book.nil? %>
							<h4><%= link_to book.title, book_path(book.isbn_print) %></h4>
							<p><%= book.isbn_print %>
							<% unless book.year.blank? %>
							  (<%= book.year %>)
							<% end %>
							</p>
		        <% end %>
	      	</td>
		    <% end %>  
		  </tr>  
	<% end %>
	</tbody>
	</table>
	
	<%= will_paginate @books %>
  <% else %>
    <h2>No books found</h2>
  <% end %>
</div>