<% if @user.citations_count > 0 %>
	<% active_categories.each do |category| %>
	  <% unless @user.get_cites_by_category(category.name).empty? %>
			<h3><%= h(category.name) %> <small><%= h(category.user_description) %></small></h3>
			
			<ul class="thumbnails">    
				<% category.sources.active.each do |source| %>
				  <% if @user.citations_count(source) > 0 %>
				    <li class="span3">
					    <div class="thumbnail">
						    <%= image_tag source.class.to_s.downcase + ".gif" %>
						    <div class="count">
						      <%= @user.citations_count(source) %>
						    </div>
						  </div>
						</li>
				  <% end %>
				<% end %>
			</ul>
			
		<% end %>
	<% end %>
<% else %>
  <div class="alert alert-info">
    No metrics found.
  </div>
<% end %>