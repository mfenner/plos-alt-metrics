<% active_categories.each do |category| %>
	<ul data-role="listview" data-theme="c" data-inset="true">
	  <li data-role="list-divider"><%= category.name %></li>
	  <% category.sources.active.each do |source| %>
     <li>
		   <%= image_tag source.class.to_s.downcase + "_sm.gif", :class => "ui-li-icon" %>
		   <%= source.name %>
		   <span class="ui-li-count"><%= @user.citations_count(source) %></span>
		 </li>
	  <% end %>
	</ul>
<% end %>