<div class="border">
<div class="page">

<h1>Article Summaries</h1>

<% for record in @result %>
  <div class="article">
    <span class="doi">
    <%=link_to h(record[:article].doi), article_path(record[:article]) %></h3>
    <span class="details">
      <ul>
      <% for groupcount in record[:groupcounts] %>
        <li><%=groupcount[:name] %>: <%=groupcount[:total] %><br/>
          <ul>
            <% for source in groupcount[:sources] %>
              <li><a href="<%=source[:public_url] %>"><%=source[:name] %> (<%=source[:total] %>)</a></li>
            <% end %>
          </ul>
        </li>
      <% end %>
      </ul>
    </span>
  </div>
<% end %>

</div>
</div>
