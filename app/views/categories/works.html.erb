<div class="border">
<div class="page">
<h1>Work Summaries</h1>

<% for record in @result %>
  <div class="work">
    <span class="doi">
    <%=link_to h(record[:work].doi), work_path(record[:work]) %></h3>
    <span class="details">
      <ul>
      <% for groupcount in record[:groupcounts] %>
        <li><%=groupcount[:name] %>:
        <%=groupcount[:total] %></li>
      <% end %>
      </ul>
    </span>
  </div>
<% end %>
</div>
</div>