<div class="layout">  
  <% unless @affiliations.empty? %>
    <h2>
      <%= pluralize(@affiliations.total_entries, 'Affiliation') %>
    </h2>
	<table>
    <% for affiliation in @affiliations %>
      <tr>
      	<td class="name">
      	  <span class="name"><%= link_to (affiliation.name.blank? ? affiliation.mas_id : h(affiliation.name)), :controller => "affiliations", :action => "show", :id => affiliation.mas_id, :format => :html %></span><br/>
      	</td>
      	<td class="count">
	      <%= affiliation.authors.count %>
	    </td>
	  </tr>
    <% end %>
	</table>
    </div>
  <% else %>
    <h2>No affiliations found</h2>
  <% end %>

  <div class="pagination">
    <%= will_paginate @affiliations %>
  </div>
</div>
