<div class="layout">  
  <% unless @authors.empty? %>
    <h2>
      <%= pluralize(@authors.total_entries, 'Author') %>
    </h2>
	<table>
    <% for author in @authors %>
      <tr>
      	<td class="name">
					<%= image_tag "http://api.twitter.com/1/users/profile_image/#{author.username}", :class => "photo_mini" %>
      	  <span class="name"><%= link_to author.display_name, author_path(author.username) %></span><br/>
					<% unless author.description.blank? %>
				    <%= author.description %>
				  <% end %>
      	</td>
      	<td class="count">
	      <%= author.articles_count == 0 ? "" : author.articles_count %>
	    </td>
	  </tr>
    <% end %>
	</table>
    </div>
  <% else %>
    <h2>No authors found</h2>
  <% end %>

  <div class="pagination">
    <%= will_paginate @authors %>
  </div>
</div>