<div class="border">
<div class="page">
  <h2><%=h @author.mas_id %><%=h ": \"#{@author.name}\"" unless @author.name.blank? %></h2>

<h2>
  <%= "All " + pluralize(@author.articles.count, 'article') %>
</h2>

<div>
  <% unless @author.articles.empty? %>
    <% for article in @author.articles %>
    <div class="article">
      <span class="doi"><%= link_to article.doi, article %></span>
      <span class="details">
        <%= pluralize article.citations_count, "citation" %> from
        <%= pluralize article.cited_retrievals_count, "source" %>, 
        <%= (article.retrieved_at.year < 2000) ? 
          "never updated" : "updated #{article.retrieved_at.to_s(:friendly)}" %>
      </span>
    </div>
    <% end %>
  <% else %>
    <div>No articles found</div>
  <% end %>
</div>

  <% if logged_in? %>
    Refresh: <%= link_to 'now', author_path(@author, :refresh => "now") %> |
    <%= link_to 'soon', author_path(@author, :refresh => "soon") %><br/>
    <%= link_to 'Edit', :controller => "authors", :action => "edit", :id => @author.mas_id %> |
    <%= link_to 'Delete',:controller => "authors", :action => "destroy", :id => @author.mas_id, :confirm => 'Are you sure?', :method => :delete %>
    <br/>
  <% end %>
  <%= link_to 'Back to list', authors_path %>
</div>
</div>