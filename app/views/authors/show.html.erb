<div class="border">
<div class="page">
	<h1><%= h(@author.display_name) %></h1>
	
  <% unless @author.description.blank? %>
	  <%= @author.description %><br/>
	<% end %>
	<% unless @author.description.blank? %>
		<%= @author.description %>
	<% end %>
		
	<%= render :partial => 'service' %>

	<% unless @author.website.blank? %>
	  <div class="homepage">
	    <%= link_to @author.website, @author.website %>
	  </div>
	<% end %>

<% unless @author.articles.empty? %>
  <% unless active_categories.empty? %>
    <div id="source">
	    <%= render :partial => 'source'%>
    </div>
  <% end %>

  <div id="article">
	  <%= render :partial => 'article'%>
  </div>
<% else %>
  <h3>No articles found</h3>
<% end %>