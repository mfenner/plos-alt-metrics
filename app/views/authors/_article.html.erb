<div class="article">
	<table>
		<th class="name">
			<h2><%= pluralize(@author.articles.count, 'Article') %></h2>
		</th>
		<% active_groups.each do |group| %>
	    <% group.sources.active.each do |source| %>
	      <th class="count">
			    <%= image_tag source.class.to_s.downcase + "_sm.gif" %>
		    </th>
		  <% end %>
    <% end %>
    <% @articles.each do |article| %>
      <tr>
      	<td class="name">
      	  <span class="name"><%= link_to (article.title.blank? ? article.doi : h(article.title)), article_path(article.doi) %></span><br/>
			    <% if article.authors.count > 1 %>
			      Coauthors: 
          	<% article.authors.each do |author| %>
              <% unless author == @author %>
          	    <%= link_to(h(author.display_name), :controller => "authors", :action => "show", :id => author.mas, :format => :html) %>
              <% end %> 
            <% end %>
          <% end %>
      	</td>
          <% active_groups.each do |group| %>
				    <% group.sources.active.each do |source| %>
			        <td class="count">
				        <% citation = article.citations_by_source(source) %>
							  <% if citation[:total] > 0 %>
                 <% if citation[:public_url] %>
                   <%= link_to h(citation[:total]), citation[:public_url]  %>
                 <% else %>
                   <%= h(citation[:total]) %>
                 <% end %>
               <% end %>
				    </td>
			    <% end %>
   	  <% end %>
	  </tr>
    <% end %>
	</table>
	
	<div class="pagination">
    <%= will_paginate @articles %>
  </div>
</div>