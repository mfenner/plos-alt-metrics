<div class="content">
	
	<div class="row">
	  <div class="span3" id="photo">
			<% unless @author.image.blank? %>
		    <%= image_tag @author.image, :class => "photo" %>
		  <% end %>
		</div>
		<div class="span7" id="twitter">
		  <%= render :partial => 'twitter' %>
		</div>
	</div>
	
	<ul class="tabs" data-tabs="tabs" >
		<li><a href="#service">Author Identifiers</a></li>
		<li class="active"><a href="#source">Metrics</a></li>
		<li><a href="#article">Articles</a></li>
	</ul>	
	
	<div class="tab-content">
		<div class="tab-pane" id="service">
			<%= render :partial => 'service' %>
		</div>
		
		<div class="tab-pane active" id="source">
		  <%= render :partial => 'source'%>
		</div>

		<div class="tab-pane" id="article">
		  <%= render :partial => 'article'%>
		</div>
	</div>
</div>