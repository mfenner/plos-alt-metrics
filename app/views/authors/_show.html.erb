<div class="content">
	<div class="row">
		<% unless @author.image.blank? %>
	    <div class="span3" id="photo">
		    <%= image_tag @author.image, :class => "photo" %>
		  </div>
	  <% end %>
		<div class="span8" id="twitter">
		  <%= render :partial => 'twitter' %>
		</div>
		<div class="span4 offset1">
			<p><%= link_to "JSON", author_path(@author.username, :format => :json) %> | <%= link_to "XML", author_path(@author.username, :format => :xml) %> | <%= link_to "BibTeX", author_path(@author.username, :format => :bib) %> | <%= link_to "RIS", author_path(@author.username, :format => :ris) %> | <%= link_to "CSV", author_path(@author.username, :format => :csv) %></p>
		</div>
	</div>
	
	<ul class="tabs" data-tabs="tabs" >
		<li class="<%= @author.has_profile ? '' : 'active' %>"><a href="#service">Identifiers</a></li>
		<% if @author.has_profile %>
		<li class="active"><a href="#source">Metrics</a></li>
		<% unless @author.journal_articles.empty? %>
		  <li><a href="#journal_article">Journal Articles (<%= @author.journal_articles.count %>)</a></li>
		<% end %>
		<% unless @author.conference_papers.empty? %>
		  <li><a href="#conference_paper">Conference Papers (<%= @author.conference_papers.count %>)</a></li>
		<% end %>
		<% unless @author.book_contents.empty? %>
		  <li><a href="#book_content">Book Content (<%= @author.book_contents.count %>)</a></li>
		<% end %>
		<% end %>
	</ul>	
	
	<div class="tab-content">
		<div class="tab-pane <%= @author.has_profile ? '' : 'active' %>" id="service">
			<%= render :partial => 'service' %>
		</div>
		
		<% if @author.has_profile %>
			<div class="tab-pane active" id="source">
			  <%= render :partial => 'source'%>
			</div>

			<div class="tab-pane" id="journal_article">
			  <%= render :partial => 'journal_article' %>
			</div>
			
			<div class="tab-pane" id="conference_paper">
			  <%= render :partial => 'conference_paper' %>
			</div>
			
			<div class="tab-pane" id="book_content">
			  <%= render :partial => 'book_content' %>
			</div>
		<% end %>
	</div>
</div>