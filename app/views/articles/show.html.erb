<div class="border">
<div class="page">
  <h2><%=h @article.title unless @article.title.blank? %></h2>
  <div class="article">
	  <%= link_to "doi:" + h(@article.doi), "http://dx.doi.org/" + h(@article.doi) %><p>

	<% unless @article.authors.empty? %>
	  <% if @article.authors.count > 0 %>
      <% @article.authors.each do |author| %>
      	<%= link_to h(author.display_name), author_path(author.username) %>
     <% end %>
   <% end %>
  <% end %>
	</div>

	<div id="source">
    <%= render :partial => 'source'%>
  </div>

  <% if author_signed_in? %>
    Refresh: <%= link_to 'now', article_path(@article.id, :refresh => "now") %> |
    <%= link_to 'soon', article_path(@article.id, :refresh => "soon") %><br/>
    <%= link_to 'Edit', edit_article_path(@article.id) %> |
    <%= link_to 'Delete', article_path(@article.id), :confirm => 'Are you sure?', :method => :delete %>
    <br/>
  <% end %>
</div>
</div>