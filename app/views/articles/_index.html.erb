<div class="layout">
  <% unless @articles.empty? %>
	<table>
		<th class="name">
			<h2><%= pluralize(@articles.total_entries, 'Article') %></h2>
		</th>
		<% active_groups.each do |group| %>
	    <% group.sources.active.each do |source| %>
	      <th class="count">
			    <%= image_tag source.class.to_s.downcase + "_sm.gif" %>
		    </th>
		  <% end %>
    <% end %>
    <% @articles.each do |article| %>
      <tr>
      	<td class="name">
      	  <span class="name"><%= (article.title.blank? ? article.doi : article.title) %></span><br/>
			<% unless article.authors.empty? %>
			  <% if article.authors.count > 0 %>
	        <% article.authors.each do |author| %>
          	<%= link_to h(author.display_name), author_path(author.username) %>
         <% end %>
       <% end %>
     <% end %>
      	</td>
	      	<% article.citations_by_group.each do |citations| %>  
            <% citations[:sources].each do |citation| %>
    	        <td class="count">
               <%= link_to citation[:total], citation[:public_url] if citation[:total] > 0 %>
             </td>
         <% end %>
   	  <% end %>
	  </tr>
    <% end %>
	</table>
    </div>
  <% else %>
    <h2>No articles found</h2>
  <% end %>

  <div class="pagination">
    <%= will_paginate @articles %>
  </div>
</div>
