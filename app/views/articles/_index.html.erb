<% unless @articles.empty? %>
	<table class="index">
		<th class="name"><%= pluralize(@articles.total_entries, 'Article') + ((author_signed_in? and params[:q].blank?) ? ' by Authors you are Following' : "") %></th>
		<% active_categories.each do |category| %>
	    <% category.sources.active.each do |source| %>
	      <th class="count">
			    <%= image_tag source.class.to_s.downcase + "_sm.gif", :title => source.category.article_description + ": " + source.name %>
		    </th>
		  <% end %>
    <% end %>
    <% @articles.each do |article| %>
      <tr>
      	<td class="name">
      	  <span class="name"><%= link_to (article.title.blank? ? article.doi : article.title), article_path(article.id) %></span><br/>
          <%= link_to "http://dx.doi.org/" + h(article.doi), "http://dx.doi.org/" + h(article.doi) %>
			<% unless article.authors.empty? %>
			  <% if article.authors.count > 0 %>
	        <% article.authors.each do |author| %>
          	<br/><%= link_to author.display_name, author_path(author.username) %>
         <% end %>
       <% end %>
     <% end %>
      	</td>
	      	<% article.citations_by_category.each do |citations| %>  
            <% citations[:sources].each do |citation| %>
    	        <td class="count">
               <%= link_to citation[:total], citation[:public_url] if citation[:total] > 0 %>
             </td>
         <% end %>
   	  <% end %>
	  </tr>
    <% end %>
    <tr>
	    <td class="pagination">
		    <div class="pagination">
			    <%= will_paginate @articles %>
			  </div>
		  </td>
		  <td class="count"></td>
		</tr>
	</table>
    </div>
  <% else %>
    <h2>No articles found</h2>
  <% end %>