<% active_categories.each do |category| %>
  <% unless @article.get_cites_by_category(category.name).blank? %>
		<h3><%= h(category.name) %> <small><%= h(category.article_description) %></small></h3>
	 
		<div class="row">       
			<% category.sources.active.each do |source| %>
			  <% if @article.citations_by_source(source)[:total] > 0 %>
			    <div class="span4 source">
					  <%= image_tag source.class.to_s.downcase + ".gif", :class => "source" %>
					</div>
			  <% end %>
			<% end %>
		</div>
  
	  <div class="row">
			<% category.sources.active.each do |source| %>
			  <% if @article.citations_by_source(source)[:total] > 0 %>
			    <div class="span4">
						<legend><% if @article.citations_by_source(source) and @article.citations_by_source(source)[:public_url] and @article.citations_by_source(source)[:total] > 0 %>
	            <%= link_to h(@article.citations_by_source(source)[:total]), @article.citations_by_source(source)[:public_url] %>
	          <% else %>
	            <%= @article.citations_by_source(source) ? @article.citations_by_source(source)[:total] : 0 %>
	          <% end %>
	          </legend>
			    </div>
			  <% end %>
		  <% end %>
		</div>
	<% end %>
<% end %>